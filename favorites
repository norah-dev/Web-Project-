  <div class="container animate__animated animate__fadeInUp animate__delay-1s">
    <h2><strong>Your Favorite Dishes ‚ù§Ô∏è</strong></h2>
    <div class="favorites-wrapper">
      <div id="favorites-list">
        <p>You don‚Äôt have favorite dishes yet</p>
      </div>
    </div>
  </div>

  <script>
    const favorites = JSON.parse(localStorage.getItem("favoriteDishes") || "[]");
    const container = document.getElementById("favorites-list");
    container.innerHTML = "";

    if (favorites.length === 0) {
      container.innerHTML = "<p><em>No favorite dishes found.</em></p>";
    } else {
      favorites.forEach(dish => {
        const box = document.createElement("div");
        box.className = "dish-box";
        box.innerHTML = `
          <h5>${dish.name}</h5>
          <p><strong>üßÇ Ingredients:</strong></p>
          <p>${dish.ingredients}</p>
          <p><strong>üë®‚Äçüç≥ Preparation:</strong></p>
          <p>${dish.preparation}</p>
          ${dish.image ? `<img src="${dish.image}" alt="${dish.name}">` : ""}
        `;
        container.appendChild(box);
      });
    }
  </script>
  <script>
  const container = document.getElementById("favorites-list");
  container.innerHTML = "";

  fetch("http://localhost:3000/favorites")
    .then(response => response.json())
    .then(favorites => {
      if (!favorites.length) {
        container.innerHTML = "<p><em>No favorite dishes found.</em></p>";
        return;
      }

      favorites.forEach(dish => {
        const box = document.createElement("div");
        box.className = "dish-box";
        box.innerHTML = `
          <h5>${dish.name}</h5>
          <p><strong>üßÇ Ingredients:</strong></p>
          <p>${dish.ingredients}</p>
          <p><strong>üë®‚Äçüç≥ Preparation:</strong></p>
          <p>${dish.preparation}</p>
          ${dish.image ? `<img src="${dish.image}" alt="${dish.name}">` : ""}
        `;
        container.appendChild(box);
      });
    })
    .catch(error => {
      container.innerHTML = "<p style='color:red;'>‚ùå Failed to load favorites</p>";
      console.error("Error fetching favorites:", error);
    });
</script>


